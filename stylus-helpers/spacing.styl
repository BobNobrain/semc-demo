$dim = 4px

// [mp][axylrbt]-[012345] classes
for $prop in margin padding
    $i = 0
    for $delta in 0 1 2 4 6 8
        // all
        .{substr($prop, 0, 1)}a-{$i}
            {$prop} $delta * $dim !important

        // x
        .{substr($prop, 0, 1)}x-{$i}
            {$prop}-left $delta * $dim !important
            {$prop}-right $delta * $dim !important

        // y
        .{substr($prop, 0, 1)}y-{$i}
            {$prop}-top $delta * $dim !important
            {$prop}-bottom $delta * $dim !important

        for $direction in left right top bottom
            .{substr($prop, 0, 1)}{substr($direction, 0, 1)}-{$i}
                {$prop}-{$direction} $delta * $dim !important

        $i = $i + 1

    // auto margin/padding
    // all
    .{substr($prop, 0, 1)}a-auto
        {$prop} auto !important

    // x
    .{substr($prop, 0, 1)}x-auto
        {$prop}-left auto !important
        {$prop}-right auto !important

    // y
    .{substr($prop, 0, 1)}y-auto
        {$prop}-top auto !important
        {$prop}-bottom auto !important

    for $direction in left right top bottom
        .{substr($prop, 0, 1)}{substr($direction, 0, 1)}-auto
            {$prop}-{$direction} auto !important

.w-100
    width: 100% !important
.h-100
    height 100% !important
